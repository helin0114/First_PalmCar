<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main_detail"
    tools:context="com.cango.adpickcar.detail.DetailFragment">

    <RelativeLayout
        android:id="@+id/rl_detail_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@drawable/bg" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接车登记"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:paddingEnd="15dp"
                android:paddingStart="5dp"
                android:text="保存"
                android:textSize="16sp" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="102dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:id="@+id/ll_detail_basic_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shadow_icon"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_detail_basic_info"
                    android:layout_width="14dp"
                    android:layout_height="13dp"
                    android:src="@drawable/jibenxinxi_off" />

                <TextView
                    android:id="@+id/tv_detail_basic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="接车信息"
                    android:textColor="@color/ad888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail_item_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shadow_icon"
                android:layout_marginStart="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_detail_item_info"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/wupinxinxi_off" />

                <TextView
                    android:id="@+id/tv_detail_item_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="物品信息"
                    android:textColor="@color/ad888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail_car_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shadow_icon"
                android:layout_marginStart="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_detail_car_info"
                    android:layout_width="14dp"
                    android:layout_height="11dp"
                    android:src="@drawable/cheliangxinxi_off" />

                <TextView
                    android:id="@+id/tv_detail_car_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="车辆信息"
                    android:textColor="@color/ad888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail_image_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shadow_icon"
                android:layout_marginStart="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_detail_image_info"
                    android:layout_width="14dp"
                    android:layout_height="12dp"
                    android:src="@drawable/jibenxinxi_off" />

                <TextView
                    android:id="@+id/tv_detail_image_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="车辆拍照"
                    android:textColor="@color/ad888888"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_detail_child_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_detail_head">

    </FrameLayout>

    <include layout="@layout/avload_view"/>

</RelativeLayout>
